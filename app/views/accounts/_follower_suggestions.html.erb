<% @follower_suggestions.each do |user| %>
  <div class="recommended-follower">
    <div class="row">
      <div class="col-sm-3 col-lg-2">
        <%= link_to profile_picture(user, 'postAccountPic'), profile_path(user.username) %>
      </div>
      <div class="col-sm-9 col-lg-10 flex">
        <div>
          <%= link_to user.username, profile_path(user.username), class: 'text-dark' %>
          <p class="text-muted"><%= user.created_at > 2.days.ago ? 'New to Lumina' : "Followed by x users" %></p>
        </div>
        <%= form_tag follow_account_path, method: :post, class: 'float-right' do %>
          <%= hidden_field_tag :follow_id, user.id %>
          <%= submit_tag 'Follow', class: 'btn btn-info btn-sm' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>